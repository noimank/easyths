# ==============================================
# QuantTrader Environment Configuration
# ==============================================
# Copy this file to .env and update the values
# ==============================================

# Application Configuration
APP_NAME="同花顺交易自动化"
APP_VERSION="1.0.0"

# Trading Configuration
TRADING_APP_PATH="C:/同花顺远航版/transaction/xiadan.exe"
TRADING_BACKEND="win32"
TRADING_TIMEOUT=30
TRADING_RETRY_COUNT=3
TRADING_RETRY_DELAY=1.0

# Queue Configuration
QUEUE_MAX_SIZE=1000
QUEUE_PRIORITY_LEVELS=5
QUEUE_BATCH_SIZE=10

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_RATE_LIMIT=10
API_CORS_ORIGINS="*"
# API密钥 - 必须设置，所有API请求都需要在Header中提供: Authorization: Bearer <API_KEY>
API_KEY=your_secure_api_key_here


# Logging Configuration
LOGGING_LEVEL="INFO"
LOGGING_FORMAT="json"
LOGGING_FILE="logs/trading.log"
LOGGING_AUDIT_FILE="logs/audit.log"
LOGGING_MAX_SIZE="100MB"
LOGGING_BACKUP_COUNT=10

# Monitoring Configuration
MONITORING_METRICS=true
MONITORING_HEALTH_CHECK_INTERVAL=60
MONITORING_STATE_SYNC_INTERVAL=30